@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/loginRegister.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h1>@ViewData["Title"]</h1>

<div class="body--login--container">
    <div class="body--login--uocContainer">
        <div class="body--login--uocLogo"></div>
    </div>
    <form class="registerForm" method="post">
        <input asp-for="Input.FirstName" placeholder="Your first Name" required>
        <input asp-for="Input.Surname" placeholder="Your last Name" required>

        <!--Student Number has a max length of 7 for the input field, may need changing for requirements-->
        <input asp-for="Input.StudentID" placeholder="Your Student Number" maxlength="7" required>
        <input asp-for="Input.Email" placeholder="name@example.com" required>
        <input asp-for="Input.Password" placeholder=" New Password" required>
        <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" required>

        <button id="registerSubmit" type="submit" class="body--register--submitButton" asp-page-handler="Register">Register</button>
        <span class="body--register--errorMessage">TEST</span>
    </form>

</div>

