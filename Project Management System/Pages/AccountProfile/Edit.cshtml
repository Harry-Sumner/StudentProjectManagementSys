@page
@using Microsoft.AspNetCore.Identity
@using Project_Management_System.Data
@model Project_Management_System.Pages.AccountProfile.EditModel

@{
    ViewData["Title"] = "Edit";
}
@inject UserManager<SPMS_Staff> StaffManager

<link rel="stylesheet" href="~/css/editProposal.css">

<div class="body--edit--container">
    <span class="editTitle">Edit a Topic</span>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Topic.TopicID" />
        <div class="editGroup">
            <label asp-for="Topic.TopicName" class="control-label"></label>
            @Html.DisplayFor(model => model.Topic.TopicName)
        </div>
        <div class="editGroup">
            <label asp-for="Topic.TopicDescription" class="control-label"></label>
            @Html.DisplayFor(model => model.Topic.TopicDescription)
        </div>
        <div class="editGroup">
            <label for="topicSupervisor">Supervisor ID</label>
            <select asp-for="Topic.SupervisorID">
                <option value=null>Choose supervisor here</option>
                @foreach (var staff in StaffManager.Users)
                {
                    <option value=@staff.Id>@staff.Name</option>
                }
            </select>
        </div>

        <div class="editGroup">
            <label for="topicMarker">Marker ID</label>
            <select asp-for="Topic.MarkerID">
                <option value=null>Choose marker here</option>
                @foreach (var staff in StaffManager.Users)
                {
                    <option value=@staff.Id>@staff.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="./CoordinatorProfile">Back to Profile</a>
</div>


    
